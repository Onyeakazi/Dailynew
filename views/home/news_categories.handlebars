<style>
  .btn {
    background-color: #98f30c;
    color: #fff;
  }

  .link-info {
    color: #98f30c;
  }

  .link-info:hover {
    color: #4067068b;
  }

</style>

<!-- News With Sidebar Start -->
<div class="container-fluid mt-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="row">
                    <div class="col-12">
                        <div class="section-title">
                            <h4 class="m-0 text-uppercase font-weight-bold">Latest News</h4>
                            <a class="text-secondary font-weight-medium text-decoration-none" href="">View All</a>
                        </div>
                    </div>
                    {{!-- Looping and pulling out the posts--}}
                    {{#each posts}}
                            <div class="col-lg-6">
                            <!-- Render post content for each related post -->
                            <div class="position-relative mb-3">
                                <img class="img-fluid w-100" src="/img/{{file}}" style="object-fit: cover;">
                                <div class="bg-white border border-top-0 p-4">
                                <div class="mb-2">
                                    <a class="badge badge-primary text-uppercase font-weight-semi-bold p-2 mr-2"
                                    href="/category/{{_id}}">{{category.name}}</a>
                                    <a class="text-body"><small>{{generateDate date "MMMM Do YYYY"}}</small></a>
                                </div>
                                <a class="h4 d-block mb-3 text-secondary text-uppercase font-weight-bold" href="/post/{{slug}}">{{title}}</a>
                                <p class="m-0">{{truncateText body 100}}</p>
                                </div>
                                <div class="d-flex justify-content-between bg-white border border-top-0 p-4">
                                <div class="d-flex align-items-center">
                                    <img class="rounded-circle mr-2" src="/uploads/{{user.file}}" width="25" height="25" alt="">
                                    <small>{{user.firstName}} {{user.lastName}}</small>
                                </div>
                                <div class="d-flex align-items-center">
                                    <small class="ml-3"><i class="far fa-eye mr-2"></i>12345</small>
                                    <small class="ml-3"><i class="far fa-comment mr-2"></i>{{approvedComCount}}</small>
                                </div>
                                </div>
                            </div>
                            </div>
                    {{/each}}
                </div>
            </div>
            {{!-- Sidebar --}}
            {{> home/sidebar}}
        </div>
    </div>
</div>
<!-- News With Sidebar End -->