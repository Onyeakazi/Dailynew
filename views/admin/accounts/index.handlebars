<section class="section">
      <div class="row">
        <div class="col-lg-12">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Registered Users</h5>

              <!-- Table with stripped rows -->
              <table class="table datatable">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Role</th>
                    <th scope="col">Registration Date</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each users}}
                    <tr>
                      <th scope="row">{{serialNumber}}</th>
                      <td><img src="/img/default_profile.png" width="30" alt="post-image">  {{firstName}} {{lastName}}</td>
                      <td>{{role}}</td>
                      <td>{{generateDate date "MMMM Do YYYY"}}</td>
                      <td><a href="/admin/accounts/change-role/{{slug}}" class="btn btn-outline-secondary"><i class="bi bi-folder"></i> Change Role</a></td>
                      <td>
                          <form action="/admin/accounts/{{slug}}?_method=DELETE" method="post">
                              <button class="btn btn-danger">Delete <i class="bi bi-exclamation-octagon"></i></button>
                          </form>
                      </td>
                    </tr>
                  {{else}}
                    <h1 class="text-bold text-bg-danger text-center">No User found.</h1>
                  {{/each}}
                </tbody>
              </table>
              <!-- End Table with stripped rows -->

              <!-- Display pagination controls -->
              <ul class="pagination">
                  {{#paginate current=current pages=pages}}{{/paginate}}
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>