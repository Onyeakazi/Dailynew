<div class="row">
    <h1>Change {{users.firstName}}'s Role</h1>
    <div class="col-md-7">
        <div class="card">
            <div class="card-body">
                <form action="/admin/accounts/change-role/{{users.slug}}?_method=PUT" method="post">
                    <div class="form-group mb-2">
                        <label for="name" class="mt-3 fw-bold">User Email:</label> <span>{{users.email}}</span>
                    </div> 
                    <div class="form-group">
                        <label for="role" class="fw-bold">Role</label>
                        <select name="role" id="role" class="form-control">
                            {{#select users.role}}
                                <option value="admin">admin</option>
                                <option value="user">user</option>
                            {{/select}}
                        </select>
                    </div>
                    <button class="btn btn-primary mt-3 "><i class="bi bi-collection"></i> Update Role</button>
                </form> 
            </div>
        </div>
    </div>

    <br>
    <hr>

</div>