<h1>Comments</h1>



<table class="table">
    <thead>
        <tr>
            <th>S/N</th>
            <th>Author</th>
            <th>Status</th>
            <th>Email</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        {{#each comments}}
        <tr>
            <th scope="row">{{serialNumber}}</th>
            <td>{{name}}</td>
            <td><input {{#if approveComment}} checked {{/if}} id="chkSwitch1" type="checkbox" name="approveComment" data-id="{{_id}}" data-onlabel="Approved" data-width="120" data-height="5" data-offlabel="Unapproved" data-style="ios" data-toggle="switchbutton" data-onstyle="light" data-offstyle="danger"></td>
            <td>{{email}}</td>
            <td>{{generateDate date "MMMM Do YYYY"}}</td>
            <td>
                <form action="/admin/comments/{{_id}}?_method=DELETE" method="post">
                    <button type="Submit" class="btn btn-danger">Delete</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>