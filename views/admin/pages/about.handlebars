<h1>About Page</h1>

<div class="card">
    <div class="card-body">
        <form action="/admin/pages/edit2" method="post" enctype="multipart/form-data">
            <!-- Add a hidden input field for the page ID -->
            <input type="hidden" name="Id" value="{{about._id}}">

            <div class="row mt-4">
                <div class="form-group mb-3">
                    <label for="our_mission" class="fw-bold">Our Mission</label>
                    <textarea cols="30" rows="5" name="our_mission" class="form-control" id="our_mission">{{about.our_mission}}</textarea>
                </div>
                <div class="form-group mb-3">
                    <label for="our_vision" class="fw-bold">Our Visison</label>
                    <textarea cols="30" rows="5" name="our_vision" class="form-control" id="our_vision">{{about.our_vision}}</textarea>
                </div>
                <div class="form-group mb-3">
                    <label for="our_services" class="fw-bold">Our Top Service</label>
                    <textarea cols="30" rows="5" name="our_services" class="form-control" id="our_services">{{about.our_services}}</textarea>
                </div>
            </div>
            <button type="submit" class="btn btn-primary"><i class="bi bi-collection"></i> Update About Page</button>
        </form>
    </div>
</div>