<div class="row">
    <h1>Edit Category</h1>
    <div class="col-md-7">
        <div class="card">
            <div class="card-body">
                <form action="/admin/categories/edit/{{categories._id}}?_method=PUT" method="post"> 
                    <div class="form-group">
                        <label for="name" class="mt-3">Name</label>
                        <input type="text" name="name" class="form-control" placeholder="Enter Title" value="{{categories.name}}">
                    </div>

                    <button class="btn btn-primary mt-3 ">Update Category</button>
                </form> 
            </div>
        </div>
    </div>

    <br>
    <hr>

</div>