
<div class="row">
    <h1>Create Category</h1>
    <div class="col-md-7">
        <div class="card">
            <div class="card-body">
                <form action="/admin/categories/create" method="post"> 
                    <div class="form-group">
                        <label for="name" class="mt-3">Name</label>
                        <input type="text" name="name" class="form-control" placeholder="Enter Title">
                    </div>

                    <button class="btn btn-primary mt-3 ">Create Category</button>
                </form> 
            </div>
        </div>
    </div>

    <br>
    <hr>

    <h1>Categories</h1>
    <div class="col-lg-10">
        <div class="card">
            <div class="card-body">
                <table class="table table-hover mt-3">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each categories}}
                        <tr>
                            <td>{{_id}}</td>
                            <td>{{name}}</td>
                            <td><a href="/admin/categories/edit/{{_id}}" class="btn btn-info">Edit</a></td>
                            <td>
                                <form action="/admin/categories/{{_id}}?_method=DELETE" method="post">
                                    <button class="btn btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>