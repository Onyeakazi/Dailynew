<h1>Comment Replies</h1>

<table class="table">
    <thead>
        <tr>
            <th>S/N</th>
            <th>Name</th>
            <th>Replied To</th>
            <th>View Reply</th>
            <th>Date</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        {{#each reply}}
            <tr>
                <th scope="row">{{serialNumber}}</th>
                <td>{{name}}</td>
                <td>{{ commentName}}</td>
                <td><a href="/admin/replies/view_reply/{{slug}}" class="btn btn-outline-secondary"><i class="bi bi-folder"></i> View Comment</a></td>
                <td>{{generateDate date "MMMM Do YYYY"}}</td>
                <td>
                    <form action="/admin/replies/{{_id}}?_method=DELETE" method="post">
                        <button type="Submit" class="btn btn-danger">Delete <i class="bi bi-exclamation-octagon"></i></button>
                    </form>
                </td>
            </tr>
        {{else}}
            <h1 class="text-bold text-bg-danger text-center">No Replies found.</h1>
        {{/each}}
    </tbody>
</table>

<!-- Display pagination controls -->
<ul class="pagination">
    {{#paginate current=current pages=pages}}{{/paginate}}
</ul>