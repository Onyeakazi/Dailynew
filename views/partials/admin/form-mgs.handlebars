{{!-- Icon message toggle --}}
<script>
     // Function to hide the flash message
    function hideFlashMessage() {
        this.parentElement.style.display = "none";
    }

    // Automatically close the alerts after a specified time
    const timeoutDuration = 4000; // Adjust the duration as needed

    // Add event listeners to hide icons
    const hideIcons = document.querySelectorAll(".bi-x");
    hideIcons.forEach((icon) => {
        icon.addEventListener("click", hideFlashMessage);
    });

    // Automatically close the alerts after the specified time
    const flashMessages = document.querySelectorAll(".alert");
    flashMessages.forEach((message) => {
        setTimeout(() => {
            message.style.display = "none";
        }, timeoutDuration);
    });
</script>