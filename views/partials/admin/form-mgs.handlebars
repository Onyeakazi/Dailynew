{{#if error}}
    <div class="alert alert-danger">
        {{error}}
        <!-- Add an icon for hiding the flash message -->
        <i id="hideIcon" class="bi bi-x" style="position: absolute; top: 16px; right: 13px; cursor: pointer;"></i>
    </div>
        
{{/if}}

